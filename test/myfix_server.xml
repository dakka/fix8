<?xml version='1.0' encoding='ISO-8859-1'?>
<fix8>
	<session name="TEX1"
				role="acceptor"
				fix_version="1100"
				active="true"
				heartbeat_interval="5"
				session_log="session_log_file"
				protocol_log="protocol_log"
				ip="127.0.0.1" port="11001"
				sender_comp_id="TEX_DLD"
				tcp_nodelay="true"
				persist="file0" />

	<persist name="bdb0"
				type="bdb"
				dir="./run"
				db="myfix_server.db"/>

	<persist name="file0"
            type="file" dir="./run"
            use_session_id="true"
            db="server" />

	<persist name="mem0"
				type="mem"/>

	<log 		name="session_log"
				type="session"
				filename="|/bin/cat"
				rotation="5"
				flags="timestamp|sequence|compress|thread"/>

	<log 		name="session_log_file"
				type="session"
				filename="./run/myfix_server_session.log"
				rotation="5"
				flags="timestamp|sequence|thread"/>

	<log 		name="protocol_log"
				type="protocol"
				filename="./run/myfix_server_protocol.log"
				rotation="5"
				flags="sequence|append|direction"/>
</fix8>
